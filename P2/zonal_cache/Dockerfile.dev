# Dockerfile.dev
FROM ubuntu:noble

# Install essential build tools and common dependencies
RUN apt-get update && \
    apt-get install -y \
      build-essential \
      gcc \
      g++ \
      check \
      libcurl4 \
      libcurl4-openssl-dev \
      libssl-dev \
      openssl && \
    rm -rf /var/lib/apt/lists/*

# Set default working directory
WORKDIR /app

# Default command
CMD ["/bin/bash"]
